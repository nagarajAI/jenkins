pipeline{
     agent {label 'maven-agent'}
    
    stages{
        stage('checkout'){
           
            steps{
                git url:"https://github.com/nagarajAI/simple-java-maven-app.git", branch: "master"
                sh 'hostname'
            }
        }
        stage('package'){
            steps{
                sh 'mvn package'
            }
        }
        stage('run'){
            steps{
                sh 'java -jar target/my-app-1.0-SNAPSHOT.jar'
            }
        }
    }
}